// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Document {
  id          String   @id @default(cuid())
  source      String   // e.g. "clawd-file", "clawdbot-session", "clawdbot-cron"
  externalId  String   // stable id per source (path, or sessionId:line, etc.)

  kind        String   // "note" | "message" | "event"
  title       String?
  path        String?

  content     String
  contentHash String
  metadata    Json?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([source, externalId])
  @@index([kind, createdAt])
}
